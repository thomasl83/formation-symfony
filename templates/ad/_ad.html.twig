{% set url = path('ads_show', {'slug': ad.slug}) %}

<div class="col-md-4">
    <div class="card bd-secondary mb-3">
        <div class="card-header text-center">
            {{ ad.rooms }} chambre{% if ad.rooms > 1%}s{% endif %}, <strong>{{ ad.price | number_format(2, ',', ' ')}}&euro; / nuit</strong> <br>
            {% if ad.comments | length > 0 %}
                {% include "shared/rating.html.twig" with{'rating': ad.avgRatings} %}            
            {% else %}
                <small>Pas encore not√©</small>
            {% endif %}
        </div>

        <a href="{{ url }}">
            <img src="{{ ad.coverImage }}" alt="Image de l'appartement" style="height: 200px; width: 100%; display: block">
        </a>
        
        <div class="card-body">
            <h4 class="card-title">
                <a href="{{ url }}">
                    {{ ad.title }}
                </a>
            </h4>
            <p class="card-text">
                {{ ad.introduction }}
            </p>
            <hr>
            <a href="{{ url }}" class="btn btn-primary float-right">En savoir plus!</a>
            {% if app.user == ad.author %}
                <a href="{{ path('ads_edit', {'slug': ad.slug}) }}" class="btn btn-secondary float-left">Modifier</a>
            {% endif %}
        </div>
        
    </div>
</div>